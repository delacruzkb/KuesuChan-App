<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setupTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Insert Mode Here"
        android:textSize="@dimen/activity_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sourceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Source"
        android:textSize="@dimen/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupTitleTextView" />

    <TextView
        android:id="@+id/sectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Section"
        android:textSize="@dimen/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sourceSpinner" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Amount"
        android:textSize="@dimen/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionCheckBoxGridLayout" />

    <TextView
        android:id="@+id/promptTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Prompt"
        android:textSize="@dimen/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountSpinner" />

    <Spinner
        android:id="@+id/sourceSpinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupTitleTextView"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/amountSpinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/Amounts"
        android:minHeight="48dp"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionCheckBoxGridLayout"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/setupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Proceed"
        android:textSize="@dimen/label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/sectionCheckBoxGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sourceSpinner">

        <CheckBox
            android:id="@+id/sectionCheckBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="1"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/sectionCheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="2"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/sectionCheckBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="3"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/sectionCheckBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="4"
            android:textSize="@dimen/text"
            app:layout_column="3"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/sectionCheckBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="5"
            android:textSize="@dimen/text"
            app:layout_column="4"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/sectionCheckBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="6"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/sectionCheckBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="7"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/sectionCheckBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="8"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/sectionCheckBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="9"
            android:textSize="@dimen/text"
            app:layout_column="3"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/sectionCheckBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="10"
            android:textSize="@dimen/text"
            app:layout_column="4"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/sectionCheckBox11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="11"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/sectionCheckBox12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="12"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/sectionCheckBox13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="13"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/sectionCheckBox14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="14"
            android:textSize="@dimen/text"
            app:layout_column="3"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/sectionCheckBox15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="15"
            android:textSize="@dimen/text"
            app:layout_column="4"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/sectionCheckBox16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="16"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/sectionCheckBox17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="17"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/sectionCheckBox18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="18"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/sectionCheckBox19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="19"
            android:textSize="@dimen/text"
            app:layout_column="3"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/sectionCheckBox20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="20"
            android:textSize="@dimen/text"
            app:layout_column="4"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/sectionCheckBox21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="21"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/sectionCheckBox22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="22"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/sectionCheckBox23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="23"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/sectionCheckBox24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="24"
            android:textSize="@dimen/text"
            app:layout_column="3"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/sectionCheckBoxAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="2dp"
            android:text="All"
            android:textSize="@dimen/text"
            app:layout_column="4"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/promptGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountSpinner">

        <CheckBox
            android:id="@+id/englishPromptCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:padding="10dp"
            android:text="English"
            android:textSize="@dimen/text"
            app:layout_column="0"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/kanaPromptCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Kana"
            android:textSize="@dimen/text"
            app:layout_column="1"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/kanjiPromptCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="漢字"
            android:textSize="@dimen/text"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityChooserConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/setupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promptGridLayout">

        <TextView
            android:id="@+id/activityTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="@dimen/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CheckBox
                android:id="@+id/activityTypeMultipleChoiceCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Multiple Choice"
                android:textSize="@dimen/text"
                app:layout_column="0"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/activityTypeMatchingCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matching"
                android:textSize="@dimen/text"
                app:layout_column="1"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/activityTypeTextAnswerCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Answer"
                android:textSize="@dimen/text"
                app:layout_column="1"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/activityTypeKanjiWritingCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanji Writing"
                android:textSize="@dimen/text"
                app:layout_column="0"
                app:layout_row="1" />

        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/gradedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Is this a graded?"
            android:textSize="@dimen/label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

        <CheckBox
            android:id="@+id/gradedCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Graded"
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>